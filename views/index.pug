extends layout

block content
  

  link(rel="stylesheet", href="stylesheets/index.css")

  .container
    .content-container
      
      
      .photosUp
        img(src="images/ej1.jpg" class="photo photo1")
        img(src="images/ej2.jpg" class="photo photo2")
        img(src="images/ej3.jpg" class="photo photo3")
      .fotaza
        img(src="images/fotaza.png" class="fotazaImg")
      .photosBottom
        img(src="images/ej4.jpg" class="photo photo4")
        img(src="images/ej5.jpg" class="photo photo5")
        img(src="images/ej6.jpg" class="photo photo6")

    .form-container
      h2 Login
      form(action="/login", method="post")
        input(type="text", name="username", placeholder="Username")
        br
        input(type="password", name="password", placeholder="Password")
        br
        input(type="submit", value="Login", class="button")
      
      h2 Sign Up
      form(action="/signup", method="post")
        input(type="text", name="username", placeholder="Username")
        br
        input(type="password", name="password", placeholder="Password")
        br
        input(type="password", name="password", placeholder="Confirm Password")
        br
        input(type="email", name="email", placeholder="Email")
        br
        input(type="submit", value="Sign Up",class="button")
      .log-social
        img(src="icons/facebook.png", alt="", class="socialLoggin")
        img(src="icons/google.png", alt="", class="socialLoggin")
        img(src="icons/github.png", alt="", class="socialLoggin")