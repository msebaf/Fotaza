extends layout

block content

    link(rel="stylesheet", href="/stylesheets/perfil.css")

    .cabecera 
        input(type="search", name="biscadorFotos", placeholder="Busca una foto", id="buscaFotos") 
        .filtros 
            h2 Mi Perfil
        a(href="/principal/", id="linkPrincipal") Principal

    .container-perfil 
        img(src=perfilUsuario.avatar, alt="", class="img-perfil")
        h2= perfilUsuario.nombreUsuario
        br
        .datos-personales 
            h4="Nombre: " + perfilUsuario.nombre
            h4="Apellido: "+ perfilUsuario.apellido
        br
        h3 Intereses 
        p= perfilUsuario.intereses

        br

    
        .container-fotos 
            h2 Mis Fotos 
            .container-fluid
                
                each imagen in imagenes
                    br
                    br
                    .row
                        h3= imagen.titulo
                        .col-3
                            | Contenido de la columna 1
                        .col-6(class= "foto-cont")
                            .row(class="datos-Row")

                                .col-12
                                    .datos
                                        p= "Autor: " + imagen.autor
                                        p= "imagen.ranking"
                                
                            .row(class="datos-Row") 
                                
                                .col-12
                                    .datos
                                        
                                        p= "Fecha: " + new Date(imagen.fechaCreacion).toLocaleDateString()
                                        
                                        p= "Hora: " + new Date(imagen.fechaCreacion).toLocaleTimeString()
                                
                            img(src="/"+imagen.ruta, alt="")
                        .col-3 
                            | Contenido de la columna 3